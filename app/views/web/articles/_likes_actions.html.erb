<% if user_signed_in? %>

  <% if article.liked_by(current_user) %>

    <%= button_to article_like_path(article_id: article.id, id: Like.find_by(user: current_user, likeable: article)), method: :delete do %>
      <%= render 'shared/svg/solid_heart' %>
    <% end %>
    
  <% else %>

    <%= button_to article_likes_path(article_id: article.id), method: :post do %>
      <%= render 'shared/svg/thin_heart' %>
    <% end %>

  <% end %>

<% end %>
