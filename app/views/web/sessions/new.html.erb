<div>
  <h1 class="text-2xl font-bold sm:text-3xl text-center">Sign In</h1>

  <%= form_with(model: @user, url: sessions_path, class: 'form') do |form| %>

    <% if @user.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this @user from being saved:</h2>

        <ul>
          <% @user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="input-group">
      <%= form.label :email, "Email", class: "label" %>
      <div class="relative">
        <%= form.email_field :email, class: "input", placeholder: "Email" %>
        <span class="input-icon"> <%= render "shared/svg/arobase" %> </span>
      </div>
    </div>

    <div class="input-group">
      <%= form.label :password, "Email", class: "label" %>
      <div class="relative">
        <%= form.password_field :password, class: "input", placeholder: "Password" %>
        <span class="input-icon"> <%= render "shared/svg/arobase" %> </span>
      </div>
    </div>

    <div class="flex justify-between items-baseline">
      <%= form.submit "Sign In", class: "btn-primary" %>
    </div>

    <div class="input-group">
      <span class="text-sm text-gray-500"> No account ? <%= link_to "Signup", new_registrations_path, class: "underline" %> </span>
      <br>
      <span class="text-sm text-gray-500">  <%= link_to "Forgot Your Password ?", new_password_reset_path, class: "underline" %> </span>
      <br>
      <span class="text-sm text-gray-500">  <%= link_to "Resend Confirmations Instructions", new_confirmations_path, class: "underline" %> </span>
    </div>
  <% end %>
</div>
