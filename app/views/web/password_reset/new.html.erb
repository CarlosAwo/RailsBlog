<div>
  <h1 class="text-2xl font-bold sm:text-3xl text-center">Forgot Your Password</h1>

  <%= form_with(url: password_reset_path, class: 'form') do |form| %>

    <div class="input-group">
      <%= form.label :email, "Your Email", class: "label" %>
      <div class="relative">
        <%= form.email_field :email, class: "input", placeholder: "example@gmail.com" %>
        <span class="input-icon"> <%= render "shared/svg/arobase" %> </span>
      </div>
    </div>

    <div class="flex justify-between items-baseline">
      <%= form.submit "Send Reset Password Instructions", class: "btn-primary" %>
    </div>

  <% end %>
</div>
