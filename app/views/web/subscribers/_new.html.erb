<div class="container mx-auto">
  <div class="max-w-md mx-auto text-center">
      <h2 class="text-2xl font-semibold mb-4">Subscribe to Our Newsletter</h2>
      <p class="text-gray-200 mb-6">Stay updated with our latest news and promotions.</p>

      <!-- Newsletter Form -->
      <%= form_with(model: subscriber, class: 'form') do |form| %>
        
        <div class="input-group">
          <%= form.label :email, "Email", class: "label" %>
          <div class="relative">
            <%= form.email_field :email, class: "input bg-gray-200", placeholder: "Email" %>
            <span class="input-icon"> <%= render "shared/svg/arobase" %> </span>
          </div>
        </div>

        <div class="flex justify-between items-baseline">
          <%= form.submit class: "btn-primary" %>
        </div>

      <% end %>
  </div>
</div>